<UserControl x:Class="DurakGame.Views.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DurakGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Transparent" BorderThickness="1" CornerRadius="5" Background="Transparent">
        <Grid>
            <Grid.RenderTransform>
                <TranslateTransform x:Name="CardAnimation" X="0" Y="0"/>
            </Grid.RenderTransform>
            <Image x:Name="CardImage" Stretch="Uniform" MouseDown="CardControl_MouseDown"/>
        </Grid>
    </Border>
</UserControl>
